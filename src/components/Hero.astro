---
import LightButton from "./LightButton.astro";
---

<section class="absolute text-center h-screen w-full z-10 top-0 bg-[url('../../assets/hero-houses-desktop.webp')] bg-no-repeat bg-cover bg-mask" id="heroSection">
    <div class="flex flex-col justify-center items-center h-screen bg-mask" id="backgroundLayer">
        <h1 class="mt-44 2xl:mt-0 text-white text-4xl 2xl:text-6xl">
            Empower Your Investments with Eid Equity
        </h1>
        <h3 class="text-white text-xl 2xl:text-5xl font-extralight mt-3 2xl:mt-5">
            Specializing in Multifamily Investment Strategies
        </h3>
        <div class="btns flex 2xl:flex-row flex-col items-center h-[300px] 2xl:h-fit gap-6 2xl:gap-0 justify-center 2xl:w-[700px] 2xl:justify-evenly 2xl: 2xl:mt-14">
            <LightButton theme="primary" text="Invest With Us"/>
            <LightButton theme="secondary" text="Learn More"/>
        </div>
    </div>
</section>

